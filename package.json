{
  "name": "flowly",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3000 --strictPort",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "ops:smoke": "bash scripts/ops-smoke.sh",
    "ops:prepush": "bash scripts/ops-prepush.sh",
    "ops:changed-smoke": "bash scripts/ops-changed-smoke.sh",
    "ops:sync-ci-secrets": "bash scripts/sync-ci-secrets.sh",
    "smoke:auth": "npx playwright test tests/e2e/auth-refresh-stability.spec.ts tests/e2e/admin-nav-stability.spec.ts tests/e2e/logout-login-stability.spec.ts --reporter=line",
    "smoke:host-normalization": "npx playwright test tests/e2e/host-normalization.spec.ts --reporter=line",
    "smoke:admin": "npx playwright test tests/e2e/flowly-billing.smoke.spec.ts tests/e2e/flowly-admin-ops.smoke.spec.ts tests/e2e/invite-technician.smoke.spec.ts --reporter=line",
    "build:mobile": "npm run build",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "predev": "node scripts/ensure-canonical.mjs",
    "prebuild": "node scripts/ensure-canonical.mjs",
    "pretypecheck": "node scripts/ensure-canonical.mjs",
    "prepreview": "node scripts/ensure-canonical.mjs",
    "presmoke:auth": "node scripts/ensure-canonical.mjs",
    "presmoke:admin": "node scripts/ensure-canonical.mjs"
  },
  "dependencies": {
    "@capacitor/core": "^7.4.3",
    "@google/genai": "^1.40.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@supabase/supabase-js": "^2.95.3",
    "idb": "^8.0.3",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.24",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
